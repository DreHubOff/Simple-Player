<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.film.PlayerFragment">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/exoplayer_view"
        android:layout_width="match_parent"
        android:background="@color/blackE9"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/offline_watching_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/exoplayer_view">

        <TextView
            android:id="@+id/online_offline_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/online_offline_viewing"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="@string/online_text"
            android:textColor="@color/exo_white"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/player_film_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textColor="@color/exo_white"
        android:textStyle="italic"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/offline_watching_root"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="looooooong title" />


</androidx.constraintlayout.widget.ConstraintLayout>